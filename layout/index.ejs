<section class="article-list wrap">
<% page.posts.each(function (post, index) { %>
	<article class="article-item">
		<div class="article-inner">
			<% if(post.photos) {%>	
			<div class="article-cover lazy-bg blur"
			data-lazy="<%= String(post.photos) + '?imageView2/0/format/jpg/q/100' %>">
			</div>
			<% } else {%>
				<div class="article-cover"></div>
			<% } %>
			<a href="/<% url_for(post.path) %><%- post.path %>">
				<h3 class="article-title"><%= post.title %></h3>
				<div class="article-info">
					<p class="article-time"><%= post.date.format("DD") %> <%= post.date.format("MMM") %> <%= post.date.format("YYYY") %></p>
					<ul class="tag">
						<% post.tags.forEach(function(i) { %>
							<li><%= i.name%></li>
						<% }) %>
					</ul>
				</div>
			</a>
		</div>
	</article>
<% }) %>
</section>

<%- partial('_partial/pagination') %>

